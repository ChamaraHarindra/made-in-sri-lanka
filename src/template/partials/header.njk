{% import "../macro/modal.njk" as modals %}
{% import "../macro/drawer.njk" as drawers %}
<div class="header__top">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="d-flex header-top-info">
                    <span class="me-2">Hotline:</span>
                    <strong>
                        <a href="tel:01122250313" class="muted">011 2  225 0313</a>
                    </strong>
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex header-top-links">
                    <a href="#" class="muted me-4">
                        <strong>Sell on Made in Sri Lanka</strong>
                    </a>
                    <a href="#" class="muted me-4">
                        <strong>Help Center</strong>
                    </a>
                    <div class="d-flex align-items-center">
                        <a href="#" class="me-2">
                            <strong>EN</strong>
                        </a>
                        <div class="divider divider__v mx-1"></div>
                        <a href="#" class="muted ms-2">
                            <strong>සිං</strong>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{# Header Bottom #}
<div class="header__bottom">
    <div class="container">
        <div class="row align-items-center no-gutters">
            <div class="col-md-3 col-7 col-lg-2 col-xl-3 order-1 order-lg-1  mobile-menu-with-logo">
                <button class="mobile-menu" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu" aria-controls="mobileMenu">
                    <i class="ri-menu-line"></i>
                </button>
                <a href="./" class="logo"><img src="{{paths.images}}/logo.svg" alt="Made in Sri Lanka"></a>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-6 d-flex align-items-center order-lg-2 order-3">
                <div class="searchbar">
                    <div class="input-group align-items-center">
                        <select class="form-select searchbar__all-cat" aria-label="Search Products">
                            <option selected>All Categories</option>
                            {% for cat in categories %}
                                <option value="1">{{cat.cat_label}}</option>
                            {% endfor %}
                        </select>
                        <div class="divider divider__v mx-1" style="height: 30px; background-color: #eaeaea;"></div>
                        <input type="text" class="form-control" placeholder="Search Products">
                        <button>
                            <i class="ri-search-line"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-5 col-lg-4 col-xl-3 order-lg-3 order-2 order-md-3">
                <div class="d-flex align-items-center justify-content-end">
                    <button class="icon-link me-md-5" data-bs-toggle="modal" data-bs-target="#loginModal">
                        <i class="ri-user-6-line"></i>
                        <div class="icon-link__text">
                            <small>Hello</small>
                            <span>Sign In</span>
                        </div>
                    </button>
                    <button class="icon-link" data-bs-toggle="offcanvas" data-bs-target="#smallCart" aria-controls="smallCart">
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">0</span>
                        <i class="ri-shopping-cart-line"></i>
                        <div class="icon-link__text">
                            <small>0 items</small>
                            <span>Cart</span>
                        </div>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{% call modals.modal('loginModal', 'no-header', '', 'Login', '', '', footer = false) -%}
<div class="p-4">
    <h2 class="with-sub mt-0">Welcome Back! <small>Login to your account</small>
    </h2>
    <form action="">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Username</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
        </div>
        <div class="d-flex align-items-center  mt-4 justify-content-between">
            <button style="min-width: 200px" class="btn btn-primary btn-lg">Sign In</button>
            <a href="#">Forgot Password?</a>
        </div>
    </form>
</div>
{%- endcall %}

{% call drawers.drawer('offcanvas-end', 'smallCart', 'Shopping Cart') -%}
{# if has no products #}
<div class="d-flex flex-column justify-content-center h-100 align-items-center">
    <lottie-player 
        src="{{paths.files}}/lottie/emptyCart.json" 
        background="transparent"  
        speed="2.5"  
        style="width: 200px; height: 200px; opacity: 0.5" 
        loop  
        autoplay
    ></lottie-player>
    <h2 class="with-sub text-center">Your cart is empty! <small>Start adding items to cart now</small>
    </h2>
    <div class="d-grid gap-2">
        <button class="btn btn-primary" type="button">Start Shopping Now</button>
    </div>
</div>
{# if has products in the cart #}

{%- endcall %}

{% call drawers.drawer('offcanvas-start', 'mobileMenu', 'Menu') -%}
<ul class="cat-drop">
    {% include "./main-nav-links.njk" %}
    <li>
        <a href="#">Flash Deals</a>
    </li>
    <li>
        <a href="#">New Arrivals</a>
    </li>
    <li>
        <a href="#">Top Sellers</a>
    </li>

</ul>

{%- endcall %}
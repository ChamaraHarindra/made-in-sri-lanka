            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="banner-card">
                        <img src="{{paths.images}}/products/7.jpg" alt="">
                        <div class="banner-card__info">
                            <h2>Be Elegant With <small>Made In Sri Lanka Sarees</small>
                            </h2>
                            <div class="more-info">
                                <span>From Rs. 5,999</span>
                                <a href="#">Browse All <i class="ri-arrow-drop-right-line"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="row">
                        {% for product in products.slice(0, 8) -%}
                            <div class="col-md-4 col-lg-3 col-xl-3 col-6">
                                <div class="card no-border round product-card  mb-3">
                                    <div class="product-card__img">
                                        <a href="#"><img src="{{paths.images}}/products/{{product.product_img}}.jpg" alt=""></a>
                                    </div>
                                    <div class="card-body">
                                        <a href="#">
                                            <h2>{{product.product_name}}</h2>
                                        </a>
                                        <div class="price">
                                            <div>Rs. {{product.product_price}}</div>
                                            <span>Rs. {{product.product_old_price}}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {%- endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# flash deals #}
    <section class="flash-deals">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    {{typo.mainHeader ('Just For You', 'View All')}}

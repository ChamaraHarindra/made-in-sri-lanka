{% extends "layouts/default.njk" %}

{% set page_title = "Home" %}
{% set homePage = true %}
{% set page_description = "This is the home page" %}

{% import "macro/typography.njk" as typo %}

{% block main %}
    {# slider #}
    <div class="glide">
        <div class="glide__track" data-glide-el="track">
            <ul class="glide__slides">
                <li class="glide__slide">
                    <img src="{{paths.images}}/slider1.jpg" alt="">
                </li>
                <li class="glide__slide"><img src="{{paths.images}}/slider1.jpg" alt=""></li>
                <li class="glide__slide"><img src="{{paths.images}}/slider1.jpg" alt=""></li>
            </ul>
        </div>
        <div class="glide__bullets" data-glide-el="controls[nav]">
            <button class="glide__bullet" data-glide-dir="=0"></button>
            <button class="glide__bullet" data-glide-dir="=1"></button>
            <button class="glide__bullet" data-glide-dir="=2"></button>
        </div>
    </div>

    {# flash deals #}
    <section class="flash-deals">
        <div class="container">
            <div class="row card-stack">
                <div class="col-lg-3 col-xl-2 col-md-12 col-12">
                    <div class="card no-border round product-card flash-deals">
                        <h2>Flash Deals</h2>
                        <h3>Upto 30% Off</h3>
                        <img src="{{paths.images}}/icons/flash.svg" alt="">
                        <div id="clockdiv">
                            <div>
                                <span class="days"></span>
                                <div class="smalltext">D</div>
                            </div>
                            <div>
                                <span class="hours"></span>
                                <div class="smalltext">H</div>
                            </div>
                            <div>
                                <span class="minutes"></span>
                                <div class="smalltext">M</div>
                            </div>
                            <div class="me-0">
                                <span class="seconds"></span>
                                <div class="smalltext">S</div>
                            </div>
                        </div>
                        <a href="#">View More</a>
                    </div>
                </div>
                {% for product in products.slice(0, 5) -%}
                    <div class="col-md-4 col-lg-3 col-xl-2 col-6">
                        <div class="card no-border round product-card">
                            <div class="product-card__img">
                                <a href="#"><img src="{{paths.images}}/products/{{product.product_img}}.jpg" alt=""></a>
                            </div>
                            <div class="card-body">
                                <a href="#">
                                    <h2>{{product.product_name}}</h2>
                                </a>
                                <div class="price">
                                    <div>Rs. {{product.product_price}}</div>
                                    <span>Rs. {{product.product_old_price}}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                {%- endfor %}

            </div>
        </div>
    </section>

    {# Featured Products #}
    <section class="featured-products">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    {{typo.mainHeader ('Featured Products', 'View All')}}
                </div>
            </div>
            <div class="card no-border round">
                <div class="row card-body">
                    <div class="col-md-4">
                        <div class="card no-border round product-card full-height">
                            <div class="product-card__img" data-height="280">
                                <a href="#"><img src="{{paths.images}}/products/6.jpg" alt=""></a>
                            </div>
                            <div class="card-body">
                                <a href="#">
                                    <h2>IGNITE CEYLON Summer & Party Mix Shirt</h2>
                                </a>
                                <div class="price">
                                    <div>Rs. 1,900</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            {% for product in products.slice(0, 8) -%}
                                <div class="col-md-4 col-lg-3 col-xl-3 col-6 mb-3">
                                    <div class="card no-border round product-card">
                                        <div class="product-card__img">
                                            <a href="#"><img src="{{paths.images}}/products/{{product.product_img}}.jpg" alt=""></a>
                                        </div>
                                        <div class="card-body">
                                            <a href="#">
                                                <h2>{{product.product_name}}</h2>
                                            </a>
                                            <div class="price">
                                                <div>Rs. {{product.product_price}}</div>
                                                <span>Rs. {{product.product_old_price}}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {%- endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {# Featured Stores #}
    <section class="featured-products">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    {{typo.mainHeader ('Featured Stores', 'View All')}}
                </div>
            </div>
            <div class="row">
                {% for store in stores -%}
                    <div class="col-md-4 col-lg-3 mb-2">
                        <div class="card round no-border store-card">
                            <div class="store-card__img">
                                <a href="#"><img src="{{paths.images}}/stores/{{store.cover}}.png" alt=""></a>
                            </div>
                            <div class="store-card__logo"><img src="{{paths.images}}/stores/logos/{{store.logo}}.png" alt=""></div>
                            <div class="store-card__info">
                                <h2>{{store.name}}</h2>
                                <p>{{store.motto}}</p>
                            </div>
                            <div class="store-card__follow">
                                <div class="followers">{{store.followers}} Followers</div>
                                <button class="store-follow-btn">
                                    <i class="ri-store-2-line"></i> Follow</button>
                            </div>
                        </div>
                    </div>
                {%- endfor %}
            </div>
        </div>
    </section>

    {# Featured Products #}
    <section class="featured-products">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    {{typo.mainHeader ('New Arrivals', 'View All')}}
